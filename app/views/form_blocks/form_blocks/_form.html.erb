<% if @block.class == Cms::FormBlock %>
    <% use_page_title "Content Library / Select Form Block Type" %>
    <% Cms::FormBlock.types.each do |form_block_type| %>
        <div style="margin-bottom: 20px;">
          <%
             link_params = {:type => form_block_type.underscore}
             unless params[:form_block].blank?
               link_params["#{form_block_type.underscore}[connect_to_page_id]"] = params[:form_block][:connect_to_page_id]
               link_params["#{form_block_type.underscore}[connect_to_container]"] = params[:form_block][:connect_to_container]
             end
          %>
          <%= link_to h(form_block_type.titleize), new_form_block_path(link_params) %>
        </div>
    <% end %>
    <% @hide_buttons = true %>
<% else %>
    <%= hidden_field_tag :type, @block.class.name.underscore, :id => "form_block_type_field" %>
    <%= render :partial => @block.class.form, :locals => {:f => f} %>
<% end %>
